@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/1ab94d0eba.js" crossorigin="anonymous"></script>
    <title>Suspirar Doces - Login</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <main class="container">
        <div class="logo">
            <img src="~/img/logo.png" style="width:100px; height:100px; border-radius:50px;" />
            <h2>Suspirar Doces</h2>
        </div>
        
        <form asp-controller="Login" asp-action="Logar">
            <div class="input-field">
                <i class="fa-solid fa-envelope" style="position:relative; top: 20px;"></i>
                <input type="text" name="email" id="email"
                       placeholder="Digite o seu email" style="text-indent: 20px">
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <i class="fa-sharp fa-solid fa-lock" style="position:relative; top: 20px;"></i>
                <i class="fa-solid fa-eye" id="aberto" onclick="fechar()" style="position:relative; left:218px; top: 20px"></i>
                <i class="fa-sharp fa-solid fa-eye-slash" id="fechado" onclick="abrir()" style="position:relative; left:218px; top: 20px"></i>
                <input type="password" name="senha" id="senha"
                       placeholder="Digite a sua senha" style="text-indent: 20px">
                <div class="underline"></div>
            </div>

            <input type="submit" asp-action="Logar" value="Entrar">
            <div class="footer_login">
                <a href="/login/Cadastrar">Cadastrar</a>
                <a href="/login/EsqueciASenha">Esqueci a senha</a>
            </div>
        </form>
    </main>
    <script>
        let aberto = document.getElementById("aberto");
        aberto.style.display = 'none';
        let fechado = document.getElementById("fechado");
        let senha = document.getElementById("senha");
        function fechar(){
            senha.type = 'password';
            aberto.style.display = 'none';
            fechado.style.display = 'inline';
        }
        function abrir() {
            senha.type = 'text';
            fechado.style.display = 'none';
            aberto.style.display = 'inline';
        }
    </script>
</body>
</html>